#!/bin/bash

layout=$(setxkbmap -query | grep layout | awk '{print $2}')

function notify {
  notify-send -u low -i config-language -t 1000 "Keyboard layout changed" "Layout set to $1" -h string:x-canonical-private-synchronous:true
}

case $layout in
	us)
		setxkbmap rs
		notify rs
        ;;
	*)
		setxkbmap us
		notify us
	;;
esac
